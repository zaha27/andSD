{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build CImg (main.cpp only)",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++17",
        "-fdiagnostics-color=always",
        "-g",
        "main.cpp",
        "-I/opt/X11/include",
        "-L/opt/X11/lib",
        "-lX11",
        "-lpthread",
        "-o",
        "program"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Compilare proiect CImg cu XQuartz (main.cpp simplu)"
    }
  ]
}
